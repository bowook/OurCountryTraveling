<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/dl_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables,TextSizeCheck">
            <TextView
                android:id="@+id/titleMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/우주여행"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/menuTab"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/menutabimage"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FF7C80" />
            <GridView
                android:id="@+id/badgeGridViewSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="6">
            </GridView>
            <GridView
                android:id="@+id/badgeGridViewFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="5">
            </GridView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FF7C80"
                tools:ignore="VisualLintBounds" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="280dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fragment2_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/menutabimage"
                android:importantForAccessibility="no">
            </ImageView>
        </LinearLayout>
        <View
            android:layout_marginTop="530dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF7C80"
            tools:ignore="VisualLintBounds" />
        <androidx.viewpager2.widget.ViewPager2
            android:layout_marginTop="532dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:id="@+id/viewPager"/>
    </FrameLayout>
    <include
        android:id="@+id/imageViewDrawer"
        layout="@layout/view_drawer"
        tools:ignore="VisualLintBounds" />
</androidx.drawerlayout.widget.DrawerLayout>